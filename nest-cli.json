{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "**/*.proto",
      {
        "include": "ssl/**/*",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true
  }
}
